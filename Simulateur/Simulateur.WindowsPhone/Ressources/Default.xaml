<ResourceDictionary
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:converter="using:Simulateur.Converters"	
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<converter:StudentVisibilityConverter x:Key="StudentVisibilityConverter" />
	<converter:DecimalConverter x:Key="DecimalConverter" />
	
	<!-- region All Styles -->
	
	<Style x:Name="SimulatorLabelTitleApplicationonPage" TargetType="TextBlock">
		<Setter Property="FontSize" Value="40"  />
		<Setter Property="TextAlignment" Value="Left" />
		<Setter Property="VerticalAlignment" Value="Bottom" />
		<Setter Property="HorizontalAlignment" Value="Right" />
		<Setter Property="Padding" Value="0, 0, 30, 0" />
		<Setter Property="FontFamily" Value="Broadway" />
	</Style>


	<Style x:Name="SimulatorLabelSubTitleApplicationonPage" TargetType="TextBlock">
		<Setter Property="FontSize" Value="20"  />
		<Setter Property="VerticalAlignment" Value="Top" />
		<Setter Property="HorizontalAlignment" Value="Right" />
		<Setter Property="Padding" Value="0, 0, 10, 0" />
		<Setter Property="FontFamily" Value="Jokerman" />
	</Style>


	<!-- endregion -->
		
</ResourceDictionary>
