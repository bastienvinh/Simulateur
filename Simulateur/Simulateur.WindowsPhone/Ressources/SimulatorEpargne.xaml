<ResourceDictionary
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<!-- region All Styles -->
	<Style x:Name="SimulatorLabelSection" TargetType="TextBlock">
		<Setter Property="FontSize" Value="30" />
		<Setter Property="VerticalAlignment" Value="Bottom" />
		<Setter Property="Padding" Value="20, 0, 0, 0" />
		<Setter Property="FontFamily" Value="Lucida Console" /> 
	</Style>

	<Style x:Name="SimulatorButtonNext" TargetType="Button">
		<Setter Property="Padding" Value="0, 0, 0, 0" />
		<Setter Property="Background" Value="Teal" />
		<Setter Property="Width" Value="140" />
		<Setter Property="HorizontalAlignment" Value="Right" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Margin" Value="0, 0, 20, 0" />
	</Style>
	
	
	<Style x:Name="SimulatorStackChoiceSilderText" TargetType="TextBlock">
		<Setter Property="FontSize" Value="35" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="HorizontalAlignment" Value="Center" />
		<Setter Property="Width" Value="75" />
		<Setter Property="TextAlignment" Value="Center" /> 
	</Style>
	
	<Style x:Name="SimulatorStackChoiceSlide" TargetType="Slider">
		<Setter Property="Width" Value="260" />
		<Setter Property="Margin" Value="10, 0, 0, 0" />
	</Style>
	
	<!-- endregion -->
		
	
	<!-- TODO : Create Animation for Button next with scroll end -->
	
</ResourceDictionary>
